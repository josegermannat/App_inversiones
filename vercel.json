{
  "version": 2,
  "builds": [
    {
      "src": "server/public/**",
      "use": "@vercel/static"
    },
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/public/(.*)",
      "dest": "server/public/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.js"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|ttf|svg|woff|woff2))",
      "dest": "client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
}