
{
  "version": 2,
  "builds": [
  
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    },
   
    {
      "src": "client/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
   
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.js"
    },

    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|ttf|svg|woff|woff2))",
      "dest": "client/dist/$1" 
    },

    {
      "src": "/(.*)",
      "dest": "client/index.html" 
    }
  ]
}